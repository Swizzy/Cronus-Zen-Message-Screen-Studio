<mah:MetroWindow
    x:Class="CronusZenMessageScreenStudio.DevicePreviewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    Title="Preview"
    Width="174"
    Height="214"
    MinWidth="174"
    MinHeight="214"
    ShowMaxRestoreButton="False"
    ShowMinButton="False"
    SnapsToDevicePixels="True"
    WindowStartupLocation="CenterOwner">
    <Grid SnapsToDevicePixels="True">
        <Viewbox SnapsToDevicePixels="True">
            <Canvas
                Width="971"
                Height="1027"
                SnapsToDevicePixels="True">
                <Image
                    Canvas.Left="0"
                    Canvas.Top="0"
                    Width="971"
                    Height="1027"
                    SnapsToDevicePixels="True"
                    Source="Cronus Zen Hardware.png" />
                <Image
                    x:Name="ImagePreview"
                    Canvas.Left="306"
                    Canvas.Top="184"
                    Width="354"
                    Height="171"
                    RenderOptions.EdgeMode="Aliased" />
            </Canvas>
        </Viewbox>
    </Grid>
</mah:MetroWindow>
